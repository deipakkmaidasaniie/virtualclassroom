<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Classwork</title>

  <!-- Tab icon -->
  <link rel="icon" href="svgs/board.svg" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" crossorigin="anonymous" />
  <!-- Styles -->
  <link rel="stylesheet" href="css/bootstrap.min.css" />
  <link rel="stylesheet" href="css/common.css" />
  <link rel="stylesheet" href="css/reset.css" />
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">
  <!-- Scripts -->
  <!-- JavaScript Bundle with Popper -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" crossorigin="anonymous"></script>
  <script src="js/bootstrap.min.js" defer></script>
  <style>
    body {
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
      overflow: hidden;
      background-color: #333;
    }

    .topnav a {
      float: left;
      color: #f2f2f2;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-size: 35px;
    }

    .topnav a:hover {
      background-color: #ddd;
      color: black;
    }

    .topnav a.active {
      background-color: #04AA6D;
      color: white;
    }

    .bodycolor {
      background-color: #9b3e3e;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header class="
        fixed-top
        header
        shadow
        d-flex
        justify-content-between
        gap-5
        px-4
        py-3
        bg-white
      ">
    <a href="/course-list" class="logo mr-3">
      <h2>ClassRoom</h2>
    </a>
    <Centre>
      <h1> Cloud Computing </h1>
    </Centre>

    <div class="d-flex gap-3" style="justify-content: space-around;">
      <span class="flex-center text-nowrap d-none d-md-flex">Welcome Student</span>
      <input class="form-control py-2" placeholder="Search for class" />
      <button class="btn btn-primary py-2">Search</button>
      <i class="fas fa-user-circle fa-2x"></i>
      <a href="/login"><i class="fas fa-sign-out-alt fa-2x"></i></a>
    </div>
  </header>

  <main class="container">
    <section class="
      d-flex
      flex-column
      gap-1
      space-header
      banner
      px-3
      rounded
    ">
      <div class="topnav">
        <a href="/materials/{{id}}">Stream</a>
        <a class="active" href="/submissions">Classwork</a>
        <a href="peopleS/{{this.cid}}">People</a>
        <!-- <a href="#about">Attendance</a> -->
      </div>
    </section>

    <section class="px-4 space-header mb-4">

      
    </section>

    <section class="container border py-4 bg-white space-header">
      <div>
        <h2 class="text-success border-bottom pb-3 mb-4">Assignment</h2>

        <div class="d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center">
          </div>
        </div>
      </div>


      <ul>
        {{#each submission}}
        <button class="
        d-flex
        align-items-center
        shadow
        rounded
        px-4
        py-4
        text-black-50
        cursor-pointer
        mb-4
      " style="background-color: white; margin-left: 20%; width:60%">
          <span class="text-black">You submitted the {{assignment_description}} : <a href="{{submission_url}}">Click to view</a></span>
          <img src="pdf.png" style="height: 50px; width: 40px; margin-left: 20px;"></img>
        </button>
        {{/each}}
      </ul>
      
    </section>

  </main>
</body>

</html>